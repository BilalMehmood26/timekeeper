<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TimeKeeper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_main</item>
    </style>

    <style name="Theme.TimeKeeper" parent="Base.Theme.TimeKeeper" />

    <style name="TextInputLayout.White.Primary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/_6sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_6sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_6sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_6sdp</item>
        <item name="boxBackgroundColor">@color/light_grey</item>
    </style>

    <style name="TextInputLayout.EditText.Primary" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/blue_main</item>
    </style>

    <style name="PendingCalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>


</resources>